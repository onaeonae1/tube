extends layouts/main.pug
include mixins/videoBlock.pug

block content
    if(isEmpty)
        h1 there is no video for now. upload FIRST video!
    .home-videos
        each item in videos
            +videoBlock({
                id: item.id,
                title: item.title,
                views: item.views,
                videoFile: item.fileUrl
            })
        